@page "/Compras"
@inject ComprasBLL comprasBLL

<EditForm Model="this">

    <div class="card">

        <div class="card-header">
            <h4>Consulta de Compras</h4>
        </div>

        <div class="card-body">

            <div class="row">              
                
                <div class="col-3">
                    <button @onclick="Buscar" class="btn btn-primary">
                        <i class="oi oi-magnifying-glass" />
                    </button>
                </div>

            </div>

        </div>
    </div>

    <table class="table table-striped table-hover mt-4" style="cursor: pointer;">

        <thead class="thead">
            <tr class="table">
                <th>CompraId</th>
                <th>Fecha</th>
                <th>SuplidorId</th>
                <th>Total</th> 
            </tr>
        </thead>

        <tbody>

            @foreach (var compra in compras)
            {
                <tr>
                    <td>@compra.CompraId</td> 
                    <td>@compra.Fecha.ToString("dd/MM/yyyy")</td>
                    <td>@compra.SuplidorId</td>
                    <td>@compra.Total </td> 
                </tr>
            }

        </tbody>

    </table>

    

</EditForm>

@code {
    public List<Compras> compras { get; set; } = new List<Compras>();
    public int CampoFiltrar { get; set; }
    public string Criterio { get; set; }

    void Buscar()
    {
        compras = comprasBLL.GetList();
    }
}